{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Configuration Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        },
        "enabled": {
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "port"
    ]
}
