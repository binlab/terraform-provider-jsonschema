{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "test.schema.json",
    "$comment": "Referenced schema in traverse_up_dir - defines version pattern",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
            "description": "Semantic version in format v1.2.3"
        },
        "name": {
            "type": "string",
            "minLength": 3,
            "description": "Name of the component"
        }
    },
    "required": [
        "version",
        "name"
    ]
}